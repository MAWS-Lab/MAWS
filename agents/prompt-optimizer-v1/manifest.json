{
  "id": "prompt-optimizer-v1",
  "name": "Prompt Optimizer Agent",
  "description": "Optimise un prompt brut pour Midjourney, Stable Diffusion ou DALL-E (ajoute détails, style, qualité, poids, artistes). Utile pour génération d’images.",
  "author": "NanashiOS-Lab",
  "version": "1.0.0",
  "license": "Apache-2.0",
  "inputs": [
    {
      "name": "prompt",
      "type": "string",
      "description": "Prompt brut à optimiser"
    },
    {
      "name": "style",
      "type": "string",
      "description": "Style optionnel (ex. cyberpunk, realistic, anime)",
      "required": false
    }
  ],
  "outputs": [
    {
      "name": "optimized_prompt",
      "type": "string",
      "description": "Prompt amélioré et détaillé"
    },
    {
      "name": "improvement_score",
      "type": "float",
      "description": "Score d’amélioration estimé (0-1)"
    }
  ],
  "dependencies": ["nltk>=3.7", "textblob>=0.17.1"],
  "price": "free",
  "tags": ["prompt-engineering", "image-generation", "ai-art", "creative"]
}
